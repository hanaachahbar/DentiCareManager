{
  "name": "denticare-manager",
  "version": "1.0.0",
  "description": "Dentist Management System Desktop App using React + Electron",
  "main": "electron/main.js",
  "scripts": {
    "backend": "node backend/server.js",
    "start": "concurrently \"npm run backend\" \"npm run start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "start-react": "npm start --prefix frontend",
    "build": "npm run build --prefix frontend",
    "electron": "electron .",
    "install-all": "npm install && npm install --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "multer": "^2.0.2"
  }
}
